<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link href="/public/stylesheets/bootstrap-datetimepicker.min.css" rel="stylesheet" media="screen">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

</head>
<body>
<div class="container">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">
                    <a href="/"><%= title %></a>
                </div>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/smartphone">SmartPhone</a></li>
                    <li><a href="/doorSensor">Sensor</a></li>
                    <li><a href="/coffeemaker">Coffee Maker</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="jumbotron" link="white">
        <div class="row">
            <h2>Welcome to <%= subTitle %></h2>
            <div class="col-md-12">
                <div class="form-group">
                    <form class="form-inline" action="/smartphone/setAlarm" method="post">
                        <label for="dtp_input1" class="col-md-2 control-label">DateTime Picking</label>
                        <div class="input-group date form_datetime col-md-5">
                            <input class="form-control" size="16" type="text" name="time" value="" readonly required>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-remove"></span></span>
                            <span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                        </div>
                        <input type="hidden" id="dtp_input1" value=""/><br/>
                        <input class="btn btn-primary" type="submit" value="Set Alarm"/>
                    </form>
                    <form class="form-inline" action="/smartphone/disableAlarm" method="post">
                        <input class="btn btn-danger" type="submit" value="Disable Alarm">
                    </form>
                    <form class="form-inline" action="/smartphone/snooze" method="post">
                        <input class="btn btn-danger" type="submit" value="Snooze Alarm">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
<script type="text/javascript" src="/public/datetimepicker/bootstrap-datetimepicker.js" charset="UTF-8"></script>
<script type="text/javascript" src="/public/datetimepicker/locales/bootstrap-datetimepicker.fr.js"
        charset="UTF-8"></script>
<script type="text/javascript">
		$('.form_datetime').datetimepicker({
				//language:  'fr',
				format: "yyyy-mm-ddThh:ii",
				weekStart: 1,
				todayBtn: 1,
				autoclose: 1,
				todayHighlight: 1,
				startView: 2,
				forceParse: 0,
				showMeridian: 1
		});
		$('.form_date').datetimepicker({
				language: 'fr',
				weekStart: 1,
				todayBtn: 1,
				autoclose: 1,
				todayHighlight: 1,
				startView: 2,
				minView: 2,
				forceParse: 0
		});
		$('.form_time').datetimepicker({
				language: 'fr',
				weekStart: 1,
				todayBtn: 1,
				autoclose: 1,
				todayHighlight: 1,
				startView: 1,
				minView: 0,
				maxView: 1,
				forceParse: 0
		});
</script>
</html>
